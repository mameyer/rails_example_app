<div class="center hero-unit">
  <h1>Welcome to rails_example_app</h1>

  <h2>
    This is the home page for the rails_example_app
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>

<h2>list of all users:</h2>
<% (User.all).each do |user| %>
	<%= "#{user.name} <#{user.email}>" %>
</br>
<% end %>

<h2>user signed in</h2>
<% if signed_in? %>
<%= "#{current_user.name} <#{current_user.email}> with token #{current_user.remember_token}" %></br>
<% else %>
no user signed in</br>
<% end %>

<h2>test params:</h2>
<%= sessions_path %></br>
<%= users_path %></br>

<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>